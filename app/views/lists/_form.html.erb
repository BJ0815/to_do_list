<% if @list.errors.present? %>
  <ul>
    <% @list.errors.each do |error, message| %>
      <li>
        <%= "#{error.capitalize} #{message}" %>
      </li>
    <% end %>
  </ul>
<% end %>
<div class="form container">
  <%= form_for (list) do |f| %>
    <div class="form-group">
      <%= f.label :title, "Name" %>
      <%= f.text_field :title %><br />
    </div>

    <div class="form-group">
      <%= f.label :date, "Date" %>
      <%= f.text_field :date %><br />
    </div>

    <div class="form-group">
      <%= f.label :note, "Note" %>
      <%= f.text_area :note %><br />
    </div>

    <%= f.submit %>
  <% end %>
</div>