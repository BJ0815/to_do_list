<div class="jumbotron text-center">
  <h1> To do list </h1>
</div>

<table class="table table-striped table-condensed">
  <% @lists.each do |list| %>
    <tr>
      <td><%= list.title %></td>
      <td><%= link_to "show", list_path(list) %></td>
      <td><%= link_to "edit", edit_list_path(list) %></td>
      <td><%= link_to "<span class='glyphicon glyphicon-trash'></span>".html_safe, list_path(list), method: :delete, data:{ confirm: "Are you sure?" } %></td>
  <% end %>
</table>

<button type="button" class="btn btn-default btn-sm">
  <%= link_to "New item", new_list_path %> 
</button>